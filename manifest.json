{
    "manifest_version": 3,
    "name": "Sidekick",
    "version": "1.2.14",
    "description": "Enhanced sidebar and tools for Torn.com",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://www.torn.com/*",
        "https://*.torn.com/*",
        "https://api.torn.com/*",
        "https://yata.yt/*",
        "https://notion-bug-proxy.akaffebtd.workers.dev/*",
        "https://torn.synclayer.dev/*"
    ],
    "icons": {
        "16": "assets/icons/swissknife-16.png",
        "32": "assets/icons/swissknife-32.png",
        "48": "assets/icons/swissknife-48.png",
        "128": "assets/icons/swissknife-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.torn.com/*",
                "https://*.torn.com/*"
            ],
            "js": [
                "src/core/notification-center.js",
                "src/core/notification-preferences.js",
                "src/core/test-notifications.js",
                "src/modules/core.module.js",
                "src/modules/settings.module.js",
                "src/modules/notepad.module.js",
                "src/modules/timer.module.js",
                "src/modules/clock.module.js",
                "src/modules/event-ticker.module.js",
                "src/modules/linkgroup.module.js",
                "src/modules/attacklist.module.js",
                "src/modules/todolist.module.js",
                "src/modules/attack-button-mover.module.js",
                "src/modules/xanax-viewer.module.js",
                "src/modules/blocktraining.module.js",
                "src/modules/timeontab.module.js",
                "src/modules/chaintimer.module.js",
                "src/modules/npc-attack-timer.module.js",
                "src/modules/randomtarget.module.js",
                "src/modules/inventorysorter.module.js",
                "src/modules/mugcalculator.module.js",
                "src/modules/weaponexp.module.js",
                "src/modules/racingalert.module.js",
                "src/modules/refillblocker.module.js",
                "src/modules/extendedchainview.module.js",
                "src/data/travel-times.js",
                "src/modules/flighttracker.module.js",
                "src/modules/debt.module.js",
                "src/modules/stockadvisor.module.js",
                "src/modules/travelarc.module.js",
                "src/modules/statstracker.module.js",
                "src/modules/premium.module.js",
                "src/modules/notionBugReporter.js",
                "src/modules/oc-weights.module.js",
                "src/modules/bunker-bucks.module.js",
                "src/modules/blood-bag-reminder.module.js",
                "src/modules/book-notifier.module.js",
                "src/modules/locked-items.module.js",
                "src/modules/quick-deposit.module.js",
                "src/modules/travel-stocks.module.js",
                "src/modules/ui.module.js",
                "src/main.js"
            ],
            "css": [
                "src/styles/main.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://www.torn.com/calendar.php*",
                "https://*.torn.com/calendar.php*"
            ],
            "js": [
                "src/calendarScraper.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icons/swissknife-16.png",
            "32": "assets/icons/swissknife-32.png",
            "48": "assets/icons/swissknife-48.png",
            "128": "assets/icons/swissknife-128.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/icons/*.png",
                "assets/images/*.png",
                "assets/images/*.jpg",
                "assets/images/*.gif",
                "assets/images/*.svg",
                "assets/icons/sidekick-logo.png",
                "assets/sounds/NotificationSound1.mp3",
                "icons/*.png",
                "src/core/notification-bridge-page.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}